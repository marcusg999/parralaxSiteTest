
<html>
    <head>


<script type = "text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script>

</script>
<style type ="text/css">
</style>

<body>

  <ul class="parallax">
    <li>
        <div class= "parallax-background" ></div>
    </li>
  </ul>

<script>
(function($) {

    var $container = $(".parallax");
    var $divs = $container.find("div.parallax-background");
    var thingBeingScrolled = document.body;
    var liHeight = $divs.eq(0).closest('li').height();
    var i, len, div, li, offset, scroll;
    var diffHeight = $divs


    var render = function() {

      // thing we are scrolling
        top = thingBeingScrolled.scrollTop;

        //loop through divs
        for(i=0; len=$divs.length; i<len; i++) {

            //get one div
            div = $divs[i];

            //get the parent LI
            li = div.parentNode;

            //calculate the offsetTOP
            offset = $(div).offset().top;

            //calculate the amount to scroll
            scroll = Math.round(((top - offset) / liHeight) * diffHeight);

            div.style.webkitTransform = "translate3d(0px, "+scroll +"px, 0px")


            //apply the scroll

        }

    };
    (function loop() {
        requestAnimationFrame(loop);
        render();
      })();

    })(jQuery);



 </script>
 </head>
</body>
</html>
